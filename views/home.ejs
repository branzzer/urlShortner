<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>home</title>
</head>

<body>

    <h1>URL SHORTNER</h1>

    <% if (locals.id) { %>
        <p> ID Generated : https://localhost:8000/url/<%= id %>
        </p>
        <% } %>
            <div>
                <form method="POST" action="/url">
                    <label>Enter the URL</label>
                    <input type="text" name="url" placeholder="http://example.com" />
                    <button type="submit">Generate</button>
                </form>

            </div>

            <% if (locals.urls) { %>
                <table>
                    <thead>
                        <th>S.no</th>
                        <th>ShortURL</th>
                        <th>RedirectedURL</th>
                        <th>VisitCount</th>
                    </thead>
                    <tbody>
                        <% urls.forEach((url,index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <%= url.shortId %>
                                </td>
                                <td>
                                    <%= url.redirectURL %>
                                </td>
                                <td>
                                    <%= url.visitHistory.length %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } %>





</body>

</html>